# إعدادات Cloudflare و HTTPS - إضافة هذه للملف .env

# تأكد من أن APP_URL يستخدم HTTPS
APP_URL=https://yourdomain.com

# إعدادات إجبار HTTPS
FORCE_HTTPS=true
ASSET_URL=https://yourdomain.com

# إعدادات Session للـ HTTPS
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none

# إعدادات CSRF للـ HTTPS
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_SAME_SITE=none

# تفعيل Trust Proxies
TRUST_PROXIES=*

# إعدادات إضافية لـ Cloudflare
CLOUDFLARE_ENABLED=true
